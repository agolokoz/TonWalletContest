<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/common_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="56dp"
        android:layout_weight="25" />

    <org.ton.lib.rlottie.RLottieImageView
        android:id="@+id/recoveryCheckFinishedAnimationView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        app:rlottie_rawRes="@raw/lottie_success" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"
        android:text="@string/perfect"
        style="@style/Text.Header" />

    <TextView
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="40dp"
        android:text="@string/set_up_passcode" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16" />

    <org.ton.wallet.uikit.view.CheckBoxTextView
        android:id="@+id/recoveryCheckFinishedCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/enable_biometrics" />

    <TextView
        android:id="@+id/recoveryCheckFinishedDoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:text="@string/set_a_passcode"
        style="@style/Button.Big.Primary" />

</LinearLayout>